<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime"
                android:exitFadeDuration="@android:integer/config_shortAnimTime">
        <item android:state_selected="false">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
            </shape>
        </item>
        <item android:state_selected="true" android:top="-6dp" android:right="-6dp" android:left="-6dp" android:bottom="1dp">
            <shape>
                <solid android:color="@android:color/transparent"/>
                <stroke
                    android:width="5dp"
                    android:color="@color/main_orange"/>
            </shape>
        </item>
    </selector>