<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkoolWorkshop2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorPrimaryVariant">@color/main_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowAnimationStyle">@null</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Theme.SkoolWorkshop2.SearchView" parent="Theme.SkoolWorkshop2">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="editTextStyle">@font/proxima_nova_semibold</item>
    </style>

    <style name="Theme.SkoolWorkshop2.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_orange</item>
    </style>
</resources>