<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/component_btn_payment_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_payment_container_states"
    android:orientation="vertical">

    <TextView
        android:id="@+id/component_btn_payment_tv_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_semibold"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:text="Betalen via CJP"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/component_btn_payment_ll_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_payment_expanded_container"
        android:orientation="vertical"
        android:padding="25dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/component_btn_payment_tv_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Wij maken een weborder aan bij CJP voor deze bestelling. Controleer of uw CJP nummer correct is."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>