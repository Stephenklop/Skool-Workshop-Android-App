<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ImageView
        android:id="@+id/activity_mollie_result_img_response"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".55"
        app:layout_constraintHeight_percent=".3"
        android:scaleType="fitCenter"
        app:tint="@color/main_orange"/>

    <TextView
        android:id="@+id/activity_mollie_result_tv_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/proxima_nova_extrabold"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_mollie_result_img_response"
        tools:layout_editor_absoluteX="25dp"
        android:text=""
        android:textAlignment="center"
        android:layout_marginBottom="25dp"/>

    <include
        android:id="@+id/activity_mollie_result_btn_continue"
        layout="@layout/component_button_large_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_mollie_result_img_response" />


</androidx.constraintlayout.widget.ConstraintLayout>