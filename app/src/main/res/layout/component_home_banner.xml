<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/component_home_banner_img_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_home_banner_container"
            android:scaleType="centerCrop"
            android:src="@drawable/home_banner_placeholder" />

        <ImageView
            android:id="@+id/component_home_banner_img_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_home_banner_gradient" />
    </androidx.cardview.widget.CardView>



</FrameLayout>