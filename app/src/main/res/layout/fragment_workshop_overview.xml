<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_overview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/fragment_workshop_overview_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova"
            android:text="Doen wat eigenlijk niet mag: openbare muurkladderij, oftewel graffiti spuiten. Dat wil je toch een keer gedaan hebben? Bij Skool Workshop mag het! Bij onze creatieve graffiti workshop ga je aan de slag met spuitbussen en een canvas. Je mag je eigen kunstwerk ontwerpen en waar nodig helpen we je. Samen met jouw eigen graffiti tag onderteken je jouw street art helemaal in stijl. Bij de Workshop Graffiti ben je volledig bezig met je creativiteit, net zoals bij de Workshop T-Shirt Ontwerpen

            \n\nBinnen de Workshop Graffiti wordt er gewerkt aan de volgende vijf kernvaardigheden;

            \n\n- CreÃ«ren
            \n- Beleven
            \n- Innoveren
            \n- Onderscheiden
            \n- Presenteren"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_workshop_overview_tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="150,-"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_workshop_overview_tv_description" />

        <TextView
            android:id="@+id/fragment_worksjop_overview_tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="60 minuten | Maximaal 25 deelnemers"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_workshop_overview_tv_price" />


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_worksjop_overview_tv_details">

            <include
                android:id="@+id/fragment_workshop_overview_btn_booking"
                layout="@layout/component_button_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_worksjop_overview_tv_details"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_workshop_overview_tv_div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="of"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_workshop_overview_btn_booking" />

            <include
                android:id="@+id/fragment_workshop_overview_btn_info"
                layout="@layout/component_button_large_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_workshop_overview_tv_div"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>