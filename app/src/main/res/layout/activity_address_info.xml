<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_address_info_tv_shopping_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Winkelmand"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/activity_address_info_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_left"
                android:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/activity_address_info_tv_shopping_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/activity_address_info_tv_shopping_cart" />

            <LinearLayout
                android:id="@+id/activity_address_info_ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_shopping_cart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Voornaam"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_firstname"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Achternaam"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_lastname"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_address_info_tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Bedrijfsnaam (optioneel)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_ll_name" />

            <include
                android:id="@+id/activity_address_info_et_company"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_company" />

            <Spinner
                android:id="@+id/activity_address_info_spnr_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:popupBackground="@android:color/transparent"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="@+id/activity_address_info_ll_address"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_country_spinner" />

            <LinearLayout
                android:id="@+id/activity_address_info_ll_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_address_info_spnr_country"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_company">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Postcode"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_postalcode"
                        layout="@layout/component_edittext_postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="HuisNr &amp; toevoeging"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_housenr"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_address_info_tv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Plaats"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_ll_address" />

            <include
                android:id="@+id/activity_address_info_et_place"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_place" />

            <TextView
                android:id="@+id/activity_address_info_tv_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Straatnaam"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_place" />

            <include
                android:id="@+id/activity_address_info_et_street"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_street" />

            <TextView
                android:id="@+id/activity_address_info_tv_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Telefoon"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_street" />

            <include
                android:id="@+id/activity_address_info_et_tel"
                layout="@layout/component_edittext_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_tel" />

            <TextView
                android:id="@+id/activity_address_info_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="E-mailadres"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_tel" />

            <include
                android:id="@+id/activity_address_info_et_email"
                layout="@layout/component_edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_email" />

            <TextView
                android:id="@+id/activity_address_info_tv_cjp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="CJP nummer (optioneel)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_email" />

            <include
                android:id="@+id/activity_address_info_et_cjp"
                layout="@layout/component_edittext_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_cjp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_address_info_tv_regsystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Wil je gebruik maken van ons online inschrijfsysteem? (optioneel)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/activity_address_info_rg_regsystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_address_info_tv_regsystem">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/main_orange"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Ja"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:buttonTint="@color/main_orange"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Nee"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/activity_address_info_tv_regsystem_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Lees meer hierover"
                android:textColor="@color/main_orange"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/activity_address_info_rg_regsystem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_address_info_rg_regsystem"
                app:layout_constraintTop_toTopOf="@+id/activity_address_info_rg_regsystem" />

            <TextView
                android:id="@+id/activity_address_info_tv_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Wil je gebruik maken van een gratis compilatie filmpje en foto's? (optioneel)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/activity_address_info_rg_regsystem" />

            <RadioGroup
                android:id="@+id/activity_address_info_rg_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_address_info_tv_comp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/main_orange"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Ja"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:buttonTint="@color/main_orange"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Nee"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/activity_address_info_cb_workshop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/main_orange"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:gravity="top"
                android:text="Workshop locatie opgeven indien dit afwijkt van het factuuradres"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_rg_comp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_address_info_cl_workshop_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/activity_address_info_ll_workshop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Voornaam"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_workshop_firstname"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Achternaam"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_workshop_lastname"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_address_info_tv_workshop_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Bedrijfsnaam (optioneel)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_ll_workshop_name" />

            <include
                android:id="@+id/activity_address_info_et_workshop_company"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_workshop_company" />

            <Spinner
                android:id="@+id/activity_address_info_spnr_workshop_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:popupBackground="@android:color/transparent"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="@+id/activity_address_info_ll_workshop_address"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_country_spinner" />

            <LinearLayout
                android:id="@+id/activity_address_info_ll_workshop_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_address_info_spnr_workshop_country"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_workshop_company">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Postcode"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_et_workshop_postalcode"
                        layout="@layout/component_edittext_postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="HuisNr &amp; toevoeging"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <include
                        android:id="@+id/activity_address_info_workshop_housenr"
                        layout="@layout/component_edittext_plaintext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_address_info_tv_workshop_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Plaats"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_ll_workshop_address" />

            <include
                android:id="@+id/activity_address_info_et_workshop_place"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_workshop_place" />

            <TextView
                android:id="@+id/activity_address_info_tv_workshop_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Straatnaam"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_workshop_place" />

            <include
                android:id="@+id/activity_address_info_et_workshop_street"
                layout="@layout/component_edittext_plaintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/activity_address_info_tv_workshop_street" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/activity_address_info_tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Workshop informatie (optioneel)"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/activity_address_info_et_workshop_place" />

        <include
            android:id="@+id/activity_address_info_et_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_edittext_plaintext_multiline" />

        <include
            android:id="@+id/activity_address_info_btn_submit"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/component_button_large" />
    </LinearLayout>
</ScrollView>