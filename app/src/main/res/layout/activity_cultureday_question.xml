<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_cultureday_question_img_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/activity_cultureday_question_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:background="@drawable/detail_background"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_cultureday_question_rv_tags"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp">

                <TextView
                    android:id="@+id/activity_cultureday_question_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Cultuurdag"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Aantal personen:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_amount"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste datum:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_ed_date"
                    layout="@layout/component_edittext_date_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste aanvangstijd:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_time"
                    layout="@layout/component_edittext_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste locatie:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_location"
                    layout="@layout/component_edittext_plaintext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="CJP Schoolnummer:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_cjp"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="E-mailadres:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_email"
                    layout="@layout/component_edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Telefoonnummer:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_phone"
                    layout="@layout/component_edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Bericht:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_message"
                    layout="@layout/component_edittext_plaintext_multiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <CheckBox
                    android:id="@+id/activity_cultureday_question_cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:gravity="top"
                    android:paddingStart="10dp"
                    android:text="Ik ga akkoord met de algemene voorwaarden"
                    android:textSize="18sp"
                    android:buttonTint="@color/main_orange"/>

                <include
                    android:id="@+id/activity_cultureday_question_btn_send"
                    layout="@layout/component_button_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>