<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_cultureday_question_img_banner"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cultureday_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageButton
                android:id="@+id/activity_cultureday_question_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_background"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:id="@+id/activity_cultureday_question_rv_tags"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/activity_cultureday_question_ll_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- inflate component_button_tag_detail -->
                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_marginTop="25dp"
                    android:id="@+id/activity_cultureday_question_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Cultuurdag"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Aantal personen:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_amount"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste datum:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_ed_date"
                    layout="@layout/component_edittext_date_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste aanvangstijd:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_time"
                    layout="@layout/component_edittext_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste locatie:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_location"
                    layout="@layout/component_edittext_plaintext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="CJP Schoolnummer:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_cjp"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Naam:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_name"
                    layout="@layout/component_edittext_plaintext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="E-mailadres:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_email"
                    layout="@layout/component_edittext_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Telefoonnummer:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_phone"
                    layout="@layout/component_edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Bericht:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_cultureday_question_et_message"
                    layout="@layout/component_edittext_plaintext_multiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <CheckBox
                    android:id="@+id/activity_cultureday_question_cb_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:gravity="top"
                    android:paddingStart="10dp"
                    android:text="Ik ga akkoord met de algemene voorwaarden"
                    android:textSize="18sp"
                    android:buttonTint="@color/main_orange"/>

                <include
                    android:id="@+id/activity_cultureday_question_btn_send"
                    layout="@layout/component_button_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>