<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_workshop_booking_img_banner"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:overScrollMode="never">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:overScrollMode="never">

            <ImageButton
                android:id="@+id/activity_workshop_booking_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ic_arrow_left"
                app:layout_collapseMode="pin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_background"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingTop="25dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="25dp">

                <HorizontalScrollView
                    android:id="@+id/activity_workshop_booking_rv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none"
                    android:overScrollMode="never">
                  
                    <LinearLayout
                        android:id="@+id/activity_workshop_booking_ll_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- inflate component_button_tag_detail -->
                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Graffiti"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Gewenste datum:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_date"
                    layout="@layout/component_edittext_date_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Totaal aantal deelnemers:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_amount"
                    layout="@layout/component_edittext_number_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Aantal workshoprondes:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_rounds"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Aantal minuten per workshopronde:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_mins"
                    layout="@layout/component_edittext_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Tijdschema:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_schedule"
                    layout="@layout/component_edittext_plaintext_info_multiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Leerniveau:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <include
                    android:id="@+id/activity_workshop_booking_et_level"
                    layout="@layout/component_edittext_plaintext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/dark_grey" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_rounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Aantal workshoprondes:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_mins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Aantal minuten per workshopronde:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Tijdschema:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Totale duur:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Leerniveau:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dark_grey" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Subtotaal:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <include
                    android:id="@+id/activity_workshop_booking_btn_book"
                    layout="@layout/component_button_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp" />

                <TextView
                    android:id="@+id/activity_workshop_booking_tv_err"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:textColor="@color/error_red"
                    android:text="@string/tv_err_msg"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>