<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_new_container"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/item_notification_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="Titel van de notification"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_notification_tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Description van de notification"
        android:textColor="@color/black"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="16sp" />
</LinearLayout>