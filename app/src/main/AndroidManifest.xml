<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skoolworkshop2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".logic.application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkoolWorkshop2">

        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.workshop.WorkshopActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.WorkshopDetail.WorkshopDetailActivity" />
        <activity android:name=".ui.User.RegisterActivity"/>
        <activity android:name=".ui.User.ForgotPasswordActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.cultureDay.CulturedayActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.MoreMenuActivity"
                android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.cultureDay.CulturedayBookingActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.User.MyAccountActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.cultureDay.CulturedayQuestionActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.User.AccountActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.WorkshopDetail.WorkshopQuestionActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.WorkshopDetail.WorkshopBookingActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.SplashScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name=".SplashScreenActivity"/>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.shoppingCart.ShoppingCartActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.SummaryLayoutTestActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.AddressInfoLayoutTestActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.MyAccountLayoutTestActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".ui.PointsLayoutTestActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ui.User.AccountDataActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.notifications.NotificationsActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ui.WebViewActivity"
            android:windowSoftInputMode="adjustPan"/>

        <service
            android:name=".logic.notifications.MessagingService"
            android:exported="false">
            <intent-filter>
                <!-- action to listen incoming push notification -->
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <!-- action to listen token changes -->
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_icon"/>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/main_orange"/>
        <meta-data android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
    </application>

</manifest>